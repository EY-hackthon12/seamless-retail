FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    cmake \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    llama-cpp-python \
    fastapi \
    uvicorn \
    pydantic

COPY cognitive_brain/inference/llama_cpp_server.py ./server.py
COPY cognitive_brain/core/ ./cognitive_brain/core/

ENV PYTHONPATH=/app
EXPOSE 8003

CMD ["python", "server.py", "--port", "8003"]
