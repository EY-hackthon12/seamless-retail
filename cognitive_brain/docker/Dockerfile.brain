FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY cognitive_brain/ ./cognitive_brain/
COPY scripts/brain/ ./scripts/brain/
COPY agents/ ./agents/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "cognitive_brain.api:app", "--host", "0.0.0.0", "--port", "8000"]
